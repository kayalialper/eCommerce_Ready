                                                    <br />
                                                    <br />
                                                    <h4 style="font-weight:700">
                                                        I read and understand the entire sales contract: @Html.CheckBox("chk_accept",false)
                                                    </h4>
                                                </span>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <div class="submit_crt" style="text-align:right;">
                                        <a href="@Url.Action("Order","Home")" title="Proceed to Checkout">
                                            <input type="button" class="update_cart" value="CONFIRM PAYMENT" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
