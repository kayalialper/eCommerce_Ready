@model User
@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<!-- cart area start  -->
<div class="wishlist-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 ">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-sm-12 "></div>
                    <div class="col-lg-8 col-md-8 col-sm-12 ">
                        <div class="cart_totals">
                            <h2>Your informations before payment</h2>
                            <div class="total_table">
                                <table class="table-responsive">
                                    <tbody>

                                        <tr class="cart-subtotal">
                                            <th>Name - Surname</th>
                                            <td><span class="amount">@Model.NameSurname</span></td>
                                        </tr>

                                        <tr class="cart-subtotal">
                                            <th>E-Mail</th>
                                            <td><span class="amount">@Model.Email</span></td>
                                        </tr>

                                        <tr class="cart-subtotal">
                                            <th>Phone Number</th>
                                            <td><span class="amount">@Model.Telephone</span></td>
                                        </tr>

                                        <tr class="cart-subtotal">
                                            <th>Invoice Adress</th>
                                            <td><span class="amount">@Model.InvoicesAdress</span></td>
                                        </tr>

                                    </tbody>
                                </table>

                                <div class="container">
                                    <div class="submit_crt">
                                        <a href="@Url.Action("InfoUpdate","Home")" title="Proceed to Checkout">
                                            <input type="button" class="update_cart" value="Update Info" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <form action="@Url.Action("Order","Home")" method="post id=com-form-login">
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-sm-12 "></div>
                        <div class="col-lg-8 col-md-8 col-sm-12 ">
                            <div class="cart_totals">
                                <h2>Credit Cart Info</h2>
                                <div class="total_table">
                                    <table class="table-responsive">
                                        <tbody>

                                            <tr class="cart-subtotal">
                                                <th>Cart No:</th>
                                                <td>
                                                    <span class="amount">
                                                        <input type="text" name="CreditCartNo" maxlength="16" class="inputbox" onkeypress="return numberonly(this, event)" placeholder="XXXX-XXXX-XXXX-XXXX" required />
                                                    </span>
                                                </td>
                                            </tr>

                                            <tr class="cart-subtotal">
                                                <th>Expire Month:</th>
                                                <td>
                                                    <span class="amount">
                                                        <select name="ExpireMonth" required>
                                                            <option value="">-- Select --</option>
                                                            <option value="1">01</option>
                                                            <option value="2">02</option>
                                                            <option value="3">03</option>
                                                            <option value="4">04</option>
                                                            <option value="5">05</option>
                                                            <option value="6">06</option>
                                                            <option value="7">07</option>
                                                            <option value="8">08</option>
                                                            <option value="9">09</option>
                                                            <option value="10">10</option>
                                                            <option value="11">11</option>
                                                            <option value="12">12</option>
                                                        </select>
                                                    </span>
                                                </td>
                                            </tr>

                                            <tr class="cart-subtotal">
                                                <th>Expire Year:</th>
                                                <td>
                                                    <span class="amount">
                                                        <select name="ExpireYear" required>
                                                            <option value="">-- Select --</option>
                                                            <option value="23">23</option>
                                                            <option value="24">24</option>
                                                            <option value="25">25</option>
                                                            <option value="26">26</option>
                                                            <option value="27">27</option>
                                                            <option value="28">28</option>
                                                            <option value="29">29</option>
                                                            <option value="30">30</option>
                                                        </select>
                                                    </span>
                                                </td>
                                            </tr>

                                            <tr class="cart-subtotal">
                                                <th>CVV</th>
                                                <td>
                                                    <span class="amount">
                                                        <input type="text" name="CVV" maxlength="3" class="inputbox" required onkeypress="return numberonly(this, event)" />
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-sm-12 "></div>
                        <div class="col-lg-8 col-md-8 col-sm-12 ">
                            <div class="cart_totals">
                                <h2>Invoice Info</h2>
                                <div class="total_table">
                                    <table class="table-responsive">
                                        <tbody>

                                            <tr class="cart-subtotal">
                                                <th>Invoice Type:</th>
                                                <td>
                                                    <span class="amount">
                                                        @Html.RadioButton("InvoiceType","rbIndividual", new{value="rbIndividual",@checked = true}) Individual
                                                        @Html.RadioButton("InvoiceType","rbCorporate", new{value="rbCorporate"}) Corporate
                                                    </span>
                                                </td>
                                            </tr>

                                            <tr class="cart-subtotal" id="tr_tckimlik">
                                                <th>Citizenship Number:</th>
                                                <td>
                                                    <span class="amount">
                                                        <input type="text" name="txt_individual" maxlength="11" class="inputbox" onkeypress="return numberonly(this, event)" style="background-color:#FDF7C3;" required />
                                                    </span>
                                                </td>
                                            </tr>

                                            <tr class="cart-subtotal" id="tr_vergino" style="display:none;">
                                                <th>Corporate Tax Number:</th>
                                                <td>
                                                    <span class="amount">
                                                        <input type="text" name="txt_corporate" maxlength="10" class="inputbox" onkeypress="return numberonly(this, event)" style="background-color:#FDF7C3;" required />
                                                    </span>
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-sm-12 "></div>
                        <div class="col-lg-8 col-md-8 col-sm-12 ">
                            <div class="cart_totals">
                                <h2>Sales Contract</h2>
                                <div class="total_table">
                                    <table class="table-responsive">
                                        <tbody>
                                            <tr class="cart-subtotal">
                                                <span class="amount">
                                                    <textarea cols="102" rows="10">
