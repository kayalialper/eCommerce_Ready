@model IEnumerable<Product>

@{
    ViewData["Title"] = "ProductIndex";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    KayaliContext context = new KayaliContext();
}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
        <!-- BEGIN PRODUCT TABLE-->
        <div class="portlet box yellow">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-comments"></i>General View of <b>Products</b>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-striped table-hover" style="cursor:pointer;">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model=>model.ProductID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model=>model.SupplierID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model=>model.CategoryID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model=>model.StatusID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model=>model.Active)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model=>model.ProductName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model=>model.UnitPrice)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model=>model.Stock)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model=>model.Discount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model=>model.HighLighted)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model=>model.TopSeller)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model=>model.Related)
                                </th>
                                <th style="text-align:center">
                                    CRUD
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model=>item.ProductID)</td>
                                    <td>@Html.DisplayFor(model=>item.SupplierID)</td>
                                    <td>@Html.DisplayFor(model=>item.CategoryID)</td>

                                    @if (item.StatusID == 1)
                                    {
                                        <td style="background-color: brown; font-weight:600;">
                                            @Html.DisplayFor(model=>item.StatusID) | @context.Statuses.FirstOrDefault(s=>s.StatusID == item.StatusID).StatusName.ToUpper()
                                        </td>
                                    }

                                    @if (item.StatusID == 2)
                                    {
                                        <td style="background-color: forestgreen; font-weight:600;">
                                            @Html.DisplayFor(model=>item.StatusID) | @context.Statuses.FirstOrDefault(s=>s.StatusID == item.StatusID).StatusName.ToUpper()
                                        </td>
                                    }
                                    @if (item.StatusID == 3)
                                    {
                                        <td style="background-color: cornflowerblue; font-weight:600;">
                                            @Html.DisplayFor(model=>item.StatusID) | @context.Statuses.FirstOrDefault(s=>s.StatusID == item.StatusID).StatusName.ToUpper()
                                        </td>
                                    }
                                    @if (item.StatusID == 4)
                                    {
                                        <td style="background-color: lightpink; font-weight:600;">
                                            @Html.DisplayFor(model=>item.StatusID) | @context.Statuses.FirstOrDefault(s=>s.StatusID == item.StatusID).StatusName.ToUpper()
                                        </td>
                                    }
                                    @if (item.StatusID == 5)
                                    {
                                        <td style="background-color: greenyellow; font-weight:600;">
                                            @Html.DisplayFor(model=>item.StatusID) | @context.Statuses.FirstOrDefault(s=>s.StatusID == item.StatusID).StatusName.ToUpper()
                                        </td>
                                    }
                                    @if (item.StatusID == 6)
                                    {
                                        <td style="background-color: indianred; font-weight:600;">
                                            @Html.DisplayFor(model=>item.StatusID) | @context.Statuses.FirstOrDefault(s=>s.StatusID == item.StatusID).StatusName.ToUpper()
                                        </td>
                                    }

                                    <td class="@(item.Active ? "is-active" : "is-inactive")">
                                        @Html.DisplayFor(model=>item.Active)
                                    </td>
                                    <td>@Html.DisplayFor(model=>item.ProductName)</td>
                                    <td>@Html.DisplayFor(model=>item.UnitPrice)</td>
                                    <td>@Html.DisplayFor(model=>item.Stock)</td>
                                    <td>@Html.DisplayFor(model=>item.Discount)</td>
                                    <td>@Html.DisplayFor(model=>item.HighLighted)</td>
                                    <td>@Html.DisplayFor(model=>item.TopSeller)</td>
                                    <td>@Html.DisplayFor(model=>item.Related)</td>
                                    @if (item.Active)
                                    {
                                        <td>
                                            <a asp-action="ProductDetails" asp-route-id="@item.ProductID" class="btn btn-info">DETAİLS</a>
                                            <a asp-action="ProductEdit" asp-route-id="@item.ProductID" class="btn btn-primary">EDİT</a>
                                            <a asp-action="ProductDelete" asp-route-id="@item.ProductID" class="btn btn-danger">DEACTIVATE</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <a asp-action="ProductDetails" asp-route-id="@item.ProductID" class="btn btn-info">DETAİLS</a>
                                            <a asp-action="ProductEdit" asp-route-id="@item.ProductID" class="btn btn-primary">EDİT</a>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- END CATEGORY TABLE-->
        <div class="row">
            <div class="col-md-6">
                <a asp-action="ProductCreate" asp-controller="Admin" class="btn btn-success">CREATE NEW PRODUCT</a>
            </div>
            <div class="col-md-6">
                <a asp-action="CategoryIndex" asp-controller="Admin" class="btn btn-info">Go to CATEGORIES</a>
                <a asp-action="SupplierIndex" asp-controller="Admin" class="btn btn-info">Go to SUPPLIERS</a>
                <a asp-action="StatusIndex" asp-controller="Admin" class="btn btn-info">Go to STATUSES</a>
            </div>
        </div>
    </div>
</div>