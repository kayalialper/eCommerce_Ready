@model Status
@{
    ViewData["Title"] = "StatusDetails";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
        <!-- BEGIN SUPPLIER TABLE-->
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>Detailed information about Supplier named <b>@Model.StatusName;</b>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body flip-scroll">
                <table class="table table-bordered table-striped table-condensed flip-content">
                    <tbody>
                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.StatusID)</b>
                            </td>
                            <td>
                                @Html.DisplayFor(model=>model.StatusID)
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.StatusName)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.StatusName)</td>
                        </tr>                        

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.Active)</b>
                            </td>

                            @if (Model.Active == true)
                            {
                                <td class="is-active">
                                    @Html.DisplayFor(model=>model.Active)
                                </td>
                            }

                            else
                            {
                                <td class="is-inactive">
                                    @Html.DisplayFor(model=>model.Active)
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END SUPPLIER TABLE-->
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <input type="hidden" asp-for="StatusID" />
        @if (Model.Active == true)
        {
            <a asp-action="StatusEdit" asp-route-id="@Model.StatusID" class="btn btn-primary">EDIT</a>
            <a asp-action="StatusDelete" asp-route-id="@Model.StatusID" class="btn btn-danger">DEACTIVATE</a>
        }
        else
        {
            <a asp-action="StatusEdit" asp-route-id="@Model.StatusID" class="btn btn-primary">EDİT</a>
        }
        <a asp-action="StatusIndex" class="btn blue">STATUSES TABLE</a>
    </div>
</div>

