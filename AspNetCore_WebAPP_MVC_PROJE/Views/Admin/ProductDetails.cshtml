@model Product
@{
    ViewData["Title"] = "ProductDetails";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box yellow">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>Detailed information about <b>@Model.ProductName</b> Product
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body flip-scroll">
                <table class="table table-bordered table-striped table-condensed flip-content">
                    <tbody>
                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.ProductID)</b>
                            </td>
                            <td>
                                @Html.DisplayFor(model=>model.ProductID)
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.CategoryID)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.CategoryID)</td>
                        </tr>     
                        
                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.SupplierID)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.SupplierID)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.StatusID)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.StatusID)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.Active)</b>
                            </td>

                            @if (Model.Active == true)
                            {
                                <td class="is-active">
                                    @Html.DisplayFor(model=>model.Active)
                                </td>
                            }

                            else
                            {
                                <td class="is-inactive">
                                    @Html.DisplayFor(model=>model.Active)
                                </td>
                            }
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.ProductName)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.ProductName)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.PhotoPath)</b>
                            </td>
                            <td><img src="~/img/@Model.PhotoPath" height="32" width="72"></td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.SliderPhotoPath)</b>
                            </td>
                            <td><img src="~/img/@Model.SliderPhotoPath" height="32" width="72"></td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.UnitPrice)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.UnitPrice)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.Stock)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.Stock)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.Discount)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.Discount)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.AddDate)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.AddDate)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.Keywords)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.Keywords)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.Kdv)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.Kdv)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.HighLighted)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.HighLighted)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.TopSeller)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.TopSeller)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.Related)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.Related)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model=>model.Notes)</b>
                            </td>
                            <td>@Html.DisplayFor(model=>model.Notes)</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <input type="hidden" asp-for="ProductID" />
        @if (Model.Active == true)
        {
            <a asp-action="ProductEdit" asp-route-id="@Model.ProductID" class="btn btn-primary">EDIT</a>
            <a asp-action="ProductDelete" asp-route-id="@Model.ProductID" class="btn btn-danger">DEACTIVATE</a>
        }
        else
        {
            <a asp-action="ProductEdit" asp-route-id="@Model.ProductID" class="btn btn-primary">EDIT</a>
        }
        <a asp-action="ProductIndex" class="btn blue">PRODUCTS TABLE</a>
    </div>
</div>

