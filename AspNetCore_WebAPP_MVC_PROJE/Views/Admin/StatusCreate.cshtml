@model List<Status>
@{
    ViewData["Title"] = "StatusCreate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <!-- BEGIN STATUSES CREATE FORM-->
    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
        <div class="portlet box purple ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> Status <b>Creation</b> Form
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" action="/Admin/StatusCreate" method="post">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Type a new Status Title:</label>
                            <div class="col-md-9">
                                <input type="text" name="StatusName" class="form-control input-lg" placeholder="Name of the Statue" required />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Active Status:</label>
                            <div class="col-md-9">
                                <input type="checkbox" name="Active" value="true" />
                            </div>
                        </div>

                    </div>
                    <div class="form-actions right1">
                        <input type="submit" value="ADD" class="btn green" />
                        <a asp-action="StatusIndex" class="btn blue">Statuses Table</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- END STATUSES CREATE FORM-->
</div>


