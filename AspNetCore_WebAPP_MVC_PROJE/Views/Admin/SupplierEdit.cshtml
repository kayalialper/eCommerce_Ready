@model Supplier
@{
    ViewData["Title"] = "SupplierEdit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-sm-12 col-md-4 col-lg-5 col-xl-6">
    <div class="portlet box green ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i> Supplier <b>Edit</b> Form
            </div>
            <div class="tools">
                <a href="" class="collapse">
                </a>
                <a href="#portlet-config" data-toggle="modal" class="config">
                </a>
                <a href="" class="reload">
                </a>
                <a href="" class="remove">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            <form class="form-horizontal" role="form" action="/Admin/SupplierEdit" method="post">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Type a new Supplier Title:</label>
                        <div class="col-md-9">
                            <input type="text" name="BrandName" class="form-control input-lg" value="@Model.BrandName" required />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-md-3 control-label">Photopath:</label>
                        <div class="col-md-9">
                            <input type="file" name="PhotoPath" class="form-control input-lg" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">Active Supplier ?</label>
                        <div class="col-md-9">
                            <input type="checkbox" name="Active" value="true" />
                        </div>
                    </div>

                    <input type="hidden" asp-for="SupplierID" />

                </div>
                <div class="form-actions right1">
                    <input type="submit" value="UPDATE" class="btn green" />
                    <a asp-action="SupplierIndex" class="btn blue">Suppliers Table</a>
                </div>
            </form>
        </div>
    </div>
</div>

